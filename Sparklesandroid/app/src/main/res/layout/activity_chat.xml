<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColorGreyBlack"
    tools:context=".ChatActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_background"
        android:paddingStart="15dp"
        android:paddingTop="30dp"
        android:paddingEnd="25dp"
        android:paddingBottom="20dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/back"/>


        <TextView
            android:id="@+id/spark_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="YOLANTE"
            android:paddingEnd="20dp"
            android:textColor="?attr/colorBlackGrey"
            android:paddingStart="25dp"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="40dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:text="43%"
            android:textColor="?attr/colorBlackGrey"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="40dp" />



    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:progress="43"
        android:progressBackgroundTint="?attr/borderColorGreyBlack"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.stfalcon.chatkit.messages.MessagesList
        android:id="@+id/messagesList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/input"
        app:incomingDefaultBubbleColor="@color/white"
        app:incomingTextLinkColor="@color/sparkle_green"
        app:incomingDefaultBubbleSelectedColor="@color/sparkle_green"
        app:incomingDefaultBubblePressedColor="@color/sparkle_green"
        app:outcomingDefaultBubblePressedColor="@color/sparkle_green"
        app:outcomingDefaultBubbleSelectedColor="@color/sparkle_green"
        app:outcomingTextColor="@color/black"
        app:outcomingTextLinkColor="@color/sparkle_green"
        app:outcomingDefaultBubbleColor="?attr/borderColorGreyBlack"
        app:layout_constraintBottom_toTopOf="@+id/input"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <com.stfalcon.chatkit.messages.MessageInput
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        app:inputHint="Type a message"
        app:inputButtonDefaultBgColor="?attr/backgroundColorGreyBlack"
        app:inputButtonDefaultBgDisabledColor="?attr/backgroundColorGreyBlack"
        app:inputButtonIcon="@drawable/send"
        app:inputButtonDefaultIconColor="?attr/sparkGreenOnly"
        app:inputButtonDefaultIconDisabledColor="?attr/colorBlackWhite"
        app:inputButtonDefaultIconPressedColor="?attr/sparkGreenOnly"
        app:inputButtonHeight="30dp"
        app:inputButtonMargin="16dp"
        app:inputButtonWidth="30dp"
        app:inputTextColor="?attr/colorBlackWhite"
        android:background="@drawable/footer_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:paddingEnd="25dp"
        android:paddingStart="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

</android.support.constraint.ConstraintLayout>