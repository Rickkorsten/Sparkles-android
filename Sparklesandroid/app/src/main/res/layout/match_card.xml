<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sdsmdg.harjot.materialshadows.MaterialShadowViewWrapper
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shadowAlpha="0.6"
        app:shadowOffsetY="-10">

        <LinearLayout
            android:id="@+id/messageClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="73dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="113dp"
            android:gravity="bottom"
            android:orientation="vertical">
            <!--android:background="@drawable/no_relation_container">-->


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:elevation="0dp"
                app:cardCornerRadius="15dp"
                card_view:cardElevation="0dp">

                <ImageView
                    android:id="@+id/iv_profilepic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-2dp"
                    android:layout_marginTop="-2dp"
                    android:layout_marginEnd="-2dp"
                    android:layout_marginBottom="-2dp"
                    android:scaleType="centerCrop"/>

                <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:card_view="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/matchCardDarker">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/match_card_gradient_transparent"
                        />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26dp"
                        android:layout_marginBottom="28dp"
                        android:text="Tap to chat"
                        android:textColor="@color/ef_white"
                        android:fontFamily="@font/merriweather"
                        android:textStyle="normal"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="26dp"
                        android:layout_marginBottom="22dp"
                        android:text="43%"
                        android:textColor="@color/ef_white"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:textSize="28sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </com.sdsmdg.harjot.materialshadows.MaterialShadowViewWrapper>

</android.support.constraint.ConstraintLayout>